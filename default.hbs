<!doctype html>
<html lang="{{lang}}">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<title>{{meta_title page=(t "meta-page")}}</title>
		<meta name="HandheldFriendly" content="True">
		<meta name="MobileOptimized" content="320">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link href="https://fonts.googleapis.com/css?family=Noto+Sans:400,400i,700,700i&amp;subset=latin-ext" rel="stylesheet">
		<link rel="stylesheet" type="text/css" href="{{asset "css/normalize.css"}}">
		<link rel="stylesheet" type="text/css" href="{{asset "css/screen.css"}}">
		{{ghost_head}}
	</head>
	<body class="{{body_class}}">
		<div class="global-wrap">
			<div class="section-content-wrap">
				{{>header}}
				{{{body}}}
			</div>
			{{>footer}}
		</div>
		{{>search}}
		<script src="{{asset "js/global.js"}}"></script>
		{{#is "home"}}
		{{#get "posts" filter="featured:true+page:[true,false]"}}
		{{#foreach posts}}
		{{#has number="2"}}
		<script src="{{asset "js/home-slider.js"}}"></script>
		{{/has}}
		{{/foreach}}
		{{/get}}
		{{/is}}
		{{^is "post, page"}}
		<script>var numberPage = {{pagination.pages}};</script>
		<script src="{{asset "js/index.js"}}"></script>
		{{#if @labs.subscribers}}
		<script>
		ityped.init(document.querySelector(".ityped-wrap"), {
		strings: ['{{t "Start your day with {blogtitle}" blogtitle=@blog.title}}', '{{t "No spam ever, we promise!"}}'],
		showCursor: true,
		typeSpeed:  150,
		startDelay: 500,
		backDelay:  5000
		})
		</script>
		{{/if}}
		{{/is}}
		{{#is "post, page"}}
		<script src="{{asset "js/post.js"}}"></script>
		{{/is}}
		{{ghost_foot}}
	</body>
</html>