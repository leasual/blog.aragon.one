<div class="section-header wrap">
	<header class="header-wrap flex">
		<div class="header-logo">
			{{#if @blog.logo}}
			<div class="is-logo"><a href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}"></a></div>
			{{else}}
			<a class="no-logo" href="{{@blog.url}}">{{@blog.title}}</a>
			{{/if}}
		</div>
		<div class="header-nav">
			<nav class="nav-wrap">
				<label for="toggle" class="nav-label hamburger hamburger-minus">
					<span class="hamburger-box">
						<span class="hamburger-inner"></span>
					</span>
				</label>
				<input type="checkbox" id="toggle" class="nav-toggle">
				{{navigation}}
			</nav>
		</div>
		{{!-- {{#if @blog.description}}
		<div class="blog-description flex">{{@blog.description}}</div>
		{{/if}} --}}
		
		{
		<div class="blog-description flex">
			<p class="post-header" id="index_shici"></p>
		</div>
	</header>
</div>